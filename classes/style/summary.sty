\usepackage[runin]{abstract}

\pagestyle{empty}

% 図に関する余白の設定
\setlength\floatsep{2truemm} % 図と図の間の余白
\setlength\intextsep{2pt} % 本文中の図の余白
\setlength\textfloatsep{2pt} % 本文と図の間の余白
\setlength\abovecaptionskip{2pt} % 図とキャプションの間の余白

% タイトルの設定
\usepackage{expl3}
\ExplSyntaxOn

\def\title#1{\gdef\@title{#1}}
\def\studentid#1{\gdef\@studentid{#1}}
\def\author#1{\gdef\@author{#1}}
\def\supervisor#1{\gdef\@supervisor{#1}}
\def\abst#1{\gdef\@abst{#1}}
\def\kwd#1{\gdef\@kwd{#1}}

\renewcommand{\abstractname}{}
\renewcommand{\abstracttextfont}{\normalfont}

\renewcommand{\maketitle}{
  \twocolumn[
  \begin{center}
    {\Large \textgt{\@title} \vskip0.5\baselineskip}
  \end{center}
  \begin{flushright}
    {
      \large
      \@studentid \hspace*{\zh} \@author\\
      指導教員 \hspace*{\zh} \@supervisor\\
    }
  \end{flushright}
  \begin{abstract}
    \@abst \par
    Key\ words:\ \@kwd
  \end{abstract}
  \vskip\baselineskip
  ]
}

\ExplSyntaxOff

% 参考文献の設定
% natbib.styを参考に作成
\def\mythebibliography#1{
  \bibsection*{\refname}
  \list{
    \@biblabel{\arabic{enumi}}\hspace{0.5em}
  }{
    \@bibsetup{#1}
    \usecounter{enumi}
  }
  \sloppy\clubpenalty4000\widowpenalty4000
  \sfcode`\.=1000\relax
  \let\citeN\cite \let\shortcite\cite
  \let\citeasnoun\cite
}
\let\endmythebibliography=\endlist